{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre de mot passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-center mt-5">Réinitialiser votre mot de passe</h1>
<div class="w-50 mx-auto">
    {{ form_start(requestForm) }}
    {{ form_row(requestForm.email) }}
    <div>
        <small>
            Entrer votre email address et nous vous enverrons un lien de réinitialisation de votre mot de passe
        </small>
    </div>

    <button class="btn btn-primary">Envoyer un email de réinitialisation</button>
    {{ form_end(requestForm) }}</div>

{% endblock %}
