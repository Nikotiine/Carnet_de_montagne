{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mt-4 w-50 border border-primary rounded">
    <h1 class="text-center text-primary mt-4">S'enregistrer</h1>

     {{ form_start(form) }}
        <div class="row g-3  ">
        <div class="col">
           {{ form_row(form.firstName) }}
            <div class="form-error">
                {{ form_errors(form.firstName) }}
            </div>
        </div>
        <div class="col">
            {{ form_row(form.lastName) }}
            <div class="form-error">
                {{ form_errors(form.lastName) }}
            </div>
        </div>
        </div>
        <div class="">
           {{ form_row(form.email) }}
            <div class="form-error">
                {{ form_errors(form.email) }}
            </div>
        </div>
        <div class="">
            {{ form_row(form.address) }}
            <div class="form-error">
                {{ form_errors(form.address) }}
            </div>
        </div>
        <div class="row g-3">
        <div class="col">
           {{ form_row(form.zipCode) }}
            <div class="form-error">
                {{ form_errors(form.zipCode) }}
            </div>
        </div>
        <div class="col">
           {{ form_row(form.city) }}
            <div class="form-error">
                {{ form_errors(form.city) }}
            </div>
        </div>
        </div>
        <div class="">
          {{ form_row(form.plainPassword) }}
            <div class="form-error">
                {{ form_errors(form.plainPassword) }}
            </div>
        </div>
        <div class="form_group d-flex justify-content-end mb-2">
            {{ form_label(form.submit) }}{{ form_widget(form.submit) }}

        </div>


        {{ form_end(form) }}
    </div>


{% endblock %}
