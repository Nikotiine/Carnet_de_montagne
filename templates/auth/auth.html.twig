{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-2" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    {% if error %}
        <div class="alert alert-danger mt-2" role="alert">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <div class="vh-100">
    <div class="container">
        <h1 class="text-center mt-5 text-primary">Connection</h1>
        <p class="text-center mt-5 ">
            <a class="text-info" href="{{ path('app_register') }}">pas encore de compte ?</a>
        </p>
    </div>
    <div class="container  w-25 p-3 border border-primary rounded my-auto">
    <form method="post" class="" action="{{ path('app_auth') }}">
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="_username" value="{{ last_username }}">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password
                <span>
                    <a href="{{ path('app_forgot_password_request') }}">(mot passe oubli√©)</a>
                </span>
            </label>
            <input type="password" class="form-control" id="password" name="_password">
        </div>
        <div class="d-flex justify-content-end mb-2 mt-3">
        <button type="submit" class="btn btn-primary">Se connecter</button>
        </div>
    </form>
    </div>
        </div>
{% endblock %}
